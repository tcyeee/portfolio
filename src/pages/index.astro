---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="w-[820px] max-w-[calc(100%-2em)] mx-auto py-5 min-h-[80vh]">
      <button class="btn btn-primary">One</button>
      <button class="btn btn-secondary">Two</button>
      <button class="btn btn-accent btn-outline">Three</button>

      <h1 class="font-bold mt-[50vh]">Hello, I'm Lucas.</h1>

      <p>
        Welcome to the official <a href="https://astro.build/">Astro</a> blog starter template. This template serves as a lightweight, minimally-styled
        starting point for anyone looking to build a personal website, blog, or portfolio with Astro.
      </p>
    </main>
    <Footer />
  </body>
</html>
