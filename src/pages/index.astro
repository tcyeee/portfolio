---
import BaseHead from '@components/layout/BaseHead.astro';
import Footer from '@components/layout/Footer.astro';
import SocialList from '@components/index/SocialList.astro';
import ProjectItem from '@components/index/ProjectItem.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '@config';
import list from '@components/index/project-list.json';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main class="max-w-sm sm:max-w-2xl lg:max-w-4xl mx-auto py-5 min-h-[80vh] pb-[10vh]">
      <!-- <Header /> -->
      <div class="flex flex-col-reverse md:flex-row items-center gap-15 mt-20">
        <div>
          <h1 class="font-bold text-5xl mb-5 mt-5">Hello, I'm Lucas.</h1>
          <p class="text-xl text-gray-700">
            I'm a full-stack backend developer with 7 years of experience, mainly in enterprise software. I've also worked on games and
            blockchain projects, gaining broad technical exposure and adaptability.
          </p>
          <div class="flex mt-3">
            <SocialList />
          </div>
        </div>

        <img class="mask mask-circle w-[15rem] object-cover" src="../../src/assets/avatar.jpg" alt="#" />
      </div>

      <!-- work -->
      <div class="mt-[10rem]">
        <h1 class="font-bold text-2xl">My Projects</h1>
        <p class="text-gray-500 text-lg">Here are some of my recent projects. I'm always working on something new, so check back often!</p>
      </div>

      <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-6">
        {list.map((item) => <ProjectItem item={item} />)}
      </div>
    </main>
    <Footer />
  </body>
</html>
