---
import Layout from "../layouts/Layout.astro";
import { articles } from "../config";
import TagFilter from "../components/TagFilter";

// 收集所有唯一的tags
const allTags = Array.from(
  new Set(articles.flatMap((article) => article.tags || []))
).sort();
---

<Layout title="文章">
  <div class="container mx-auto px-4 py-16 max-w-4xl">
    <h1
      class="text-4xl font-bold mb-12 text-center text-gray-900 dark:text-white"
    >
      文章列表
    </h1>

    <!-- Tags筛选 -->
    <TagFilter client:load tags={allTags} />

    <div class="space-y-8" id="articles-container">
      {
        articles.map((post) => (
          <article
            data-tags={JSON.stringify(post.tags || [])}
            class="article-item bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 md:p-8 hover:shadow-xl transition-shadow"
          >
            <div class="mb-4">
              <h2 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">
                {post.title}
              </h2>
              <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                <time>
                  {new Date(post.created).toLocaleDateString("zh-CN")}
                </time>
                {post.tags && post.tags.length > 0 && (
                  <div class="flex gap-2">
                    {post.tags.map((tag) => (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded text-xs">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </div>
            <div class="prose dark:prose-invert max-w-none">
              <p class="text-gray-700 dark:text-gray-300 leading-relaxed whitespace-pre-line">
                {post.content}
              </p>
            </div>
            {post.banner && (
              <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
                <img
                  src={post.banner}
                  alt={post.title}
                  class="rounded-lg w-full h-auto object-cover"
                />
              </div>
            )}
          </article>
        ))
      }
    </div>

    {
      articles.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400 text-lg">
            暂无内容，敬请期待
          </p>
        </div>
      )
    }

    <div id="empty-filter-message" class="text-center py-12 hidden">
      <p class="text-gray-500 dark:text-gray-400 text-lg">没有找到匹配的文章</p>
    </div>
  </div>
</Layout>

<script>
  // 筛选文章的函数
  function filterArticles(selectedTags: string[]) {
    const articleItems = document.querySelectorAll(
      ".article-item"
    ) as NodeListOf<HTMLElement>;
    const emptyMessage = document.getElementById("empty-filter-message");
    const articlesContainer = document.getElementById("articles-container");

    // 如果没有选中任何tag，显示所有文章
    if (selectedTags.length === 0) {
      articleItems.forEach((item) => {
        item.style.display = "";
      });
      if (emptyMessage) emptyMessage.classList.add("hidden");
      if (articlesContainer) articlesContainer.classList.remove("hidden");
      return;
    }

    let visibleCount = 0;

    articleItems.forEach((item) => {
      const tagsStr = item.getAttribute("data-tags");
      if (!tagsStr) {
        item.style.display = "none";
        return;
      }

      try {
        const articleTags = JSON.parse(tagsStr) as string[];
        // 如果文章包含任意一个选中的tag，就显示
        const shouldShow = selectedTags.some((tag) =>
          articleTags.includes(tag)
        );

        if (shouldShow) {
          item.style.display = "";
          visibleCount++;
        } else {
          item.style.display = "none";
        }
      } catch (e) {
        item.style.display = "none";
      }
    });

    // 显示/隐藏空消息
    if (visibleCount === 0) {
      if (emptyMessage) emptyMessage.classList.remove("hidden");
      if (articlesContainer) articlesContainer.classList.add("hidden");
    } else {
      if (emptyMessage) emptyMessage.classList.add("hidden");
      if (articlesContainer) articlesContainer.classList.remove("hidden");
    }
  }

  // 将筛选函数暴露到全局，供TagFilter组件调用
  // 确保在DOM加载完成后设置
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      (window as any).filterArticles = filterArticles;
    });
  } else {
    (window as any).filterArticles = filterArticles;
  }
</script>
