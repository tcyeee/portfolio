---
import { personalInfo } from '../config/projects';
---

<footer class="bg-gray-900 text-gray-300 py-12 mt-20">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold text-white mb-4">{personalInfo.name}</h3>
        <p class="text-gray-400">{personalInfo.bio}</p>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">链接</h4>
        <ul class="space-y-2">
          <li>
            <a href={personalInfo.github} target="_blank" rel="noopener noreferrer" class="hover:text-primary-400 transition-colors">
              GitHub
            </a>
          </li>
          {personalInfo.twitter && (
            <li>
              <a href={personalInfo.twitter} target="_blank" rel="noopener noreferrer" class="hover:text-primary-400 transition-colors">
                Twitter
              </a>
            </li>
          )}
          {personalInfo.linkedin && (
            <li>
              <a href={personalInfo.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-primary-400 transition-colors">
                LinkedIn
              </a>
            </li>
          )}
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">联系</h4>
        <p class="text-gray-400">
          <a href={`mailto:${personalInfo.email}`} class="hover:text-primary-400 transition-colors">
            {personalInfo.email}
          </a>
        </p>
      </div>
    </div>
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500">
      <p>&copy; {new Date().getFullYear()} {personalInfo.name}. All rights reserved.</p>
    </div>
  </div>
</footer>

