---
import { personalInfo } from '../config'
import '../styles/icon.scss'
---

<footer class="bg-gray-900 text-gray-300 py-12 mt-20">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold text-white mb-4">{personalInfo.name}</h3>
        <p class="text-gray-400">{personalInfo.bio}</p>
      </div>
      <div class="pl-10">
        <h4 class="text-lg font-semibold text-white mb-4">链接</h4>
        <div class="flex gap-4 items-center">
          {
            personalInfo.github && (
              <a
                href={personalInfo.github}
                target="_blank"
                rel="noopener noreferrer"
                class="icon-github icon-size-25 text-white hover:opacity-80"
                aria-label="GitHub"
              />
            )
          }
          {
            personalInfo.twitter && (
              <a
                href={personalInfo.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="icon-twitter icon-size-21 text-white hover:opacity-80"
                aria-label="Twitter"
              />
            )
          }
          {
            personalInfo.redNote && (
              <a
                href={personalInfo.redNote}
                target="_blank"
                rel="noopener noreferrer"
                class="icon-redNote icon-size-55 text-white hover:opacity-80"
                aria-label="RedNote"
              />
            )
          }
          {
            personalInfo.bilibili && (
              <a
                href={personalInfo.bilibili}
                target="_blank"
                rel="noopener noreferrer"
                class="icon-bilibili icon-size-25 text-white hover:opacity-80"
                aria-label="Bilibili"
              />
            )
          }
        </div>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">联系</h4>
        <div class="text-gray-400">
          <a href={`mailto:${personalInfo.email}`} class="hover:text-primary-400 transition-colors">
            {personalInfo.email}
          </a>
          <p class="text-sm mt-2">&copy; {new Date().getFullYear()} {personalInfo.name}. All rights reserved.</p>
        </div>
      </div>
    </div>
  </div>
</footer>
