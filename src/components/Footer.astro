---
import { BASE_INFO, LINK } from '../consts';
const today = new Date();
---

<footer>
  <span>&copy; {today.getFullYear()} {BASE_INFO.author}. All rights reserved.</span>
  <div class="flex justify-center items-center gap-3">
    <a href={LINK.bilibili} target="_blank">
      <span class="sr-only">Follow Me on Bilibili</span>
      <span class="icon-bilibili"></span>
    </a>

    <a href={LINK.github} target="_blank">
      <span class="sr-only">Follow Me on Github</span>
      <span class="icon-github"></span>
    </a>

    <a href={LINK.redNote} target="_blank">
      <span class="sr-only">Follow Me on RedNote</span>
      <span class="icon-redNote"></span>
    </a>
  </div>
</footer>
<style lang="scss" scoped>
  a {
    line-height: 50px;
    display: inline-flex;
    text-decoration: none;
    filter: grayscale(100%);
    transition: filter 0.2s ease;

    &:hover {
      filter: grayscale(0%);
    }
  }
</style>
