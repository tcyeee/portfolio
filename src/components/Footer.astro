---
import { personalInfo } from '../config';
import '../styles/icon.scss';
---

<footer class="bg-gray-900 text-gray-300 py-12 mt-20">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold text-white mb-4">{personalInfo.name}</h3>
        <p class="text-gray-400">{personalInfo.bio}</p>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">链接</h4>
        <div class="flex gap-4 items-center">
          {personalInfo.github && (
            <a href={personalInfo.github} target="_blank" rel="noopener noreferrer" class="icon-github hover:opacity-80 transition-opacity" aria-label="GitHub"></a>
          )}
          {personalInfo.twitter && (
            <a href={personalInfo.twitter} target="_blank" rel="noopener noreferrer" class="icon-twitter hover:opacity-80 transition-opacity" aria-label="Twitter"></a>
          )}
          {personalInfo.redNote && (
            <a href={personalInfo.redNote} target="_blank" rel="noopener noreferrer" class="icon-redNote hover:opacity-80 transition-opacity" aria-label="RedNote"></a>
          )}
          {personalInfo.bilibili && (
            <a href={personalInfo.bilibili} target="_blank" rel="noopener noreferrer" class="icon-bilibili hover:opacity-80 transition-opacity" aria-label="Bilibili"></a>
          )}
        </div>
      </div>
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">联系</h4>
        <p class="text-gray-400">
          <a href={`mailto:${personalInfo.email}`} class="hover:text-primary-400 transition-colors">
            {personalInfo.email}
          </a>
        </p>
      </div>
    </div>
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500">
      <p>&copy; {new Date().getFullYear()} {personalInfo.name}. All rights reserved.</p>
    </div>
  </div>
</footer>

