---
const { item } = Astro.props;
---

<div class="card bg-base-100 shadow-sm hover:shadow-lg transition-shadow duration-300 p-4">
  <h3 class="text-lg font-bold mb-2">{item.title}</h3>
  <p class="text-gray-600 text-sm">{item.description}</p>
  <span class="flex flex-wrap gap-2 mt-3">
    {item.tags.map((tag: string) => <div class="badge badge-soft badge-primary">{tag}</div>)}
  </span>
</div>
