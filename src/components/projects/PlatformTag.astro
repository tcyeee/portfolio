---
const { tags = Array<String> } = Astro.props;
---

<div class="flex flex-wrap items-center gap-3">
  {
    tags.map((tag: string) => (
      <div class="badge badge-info px-2 py-3">
        {tag === 'web' && <span class="icon-web" />}
        {tag === 'mobile' && <span class="icon-mobile" />}
        <span class="text-gray-100 font-bold">{tag}</span>
      </div>
    ))
  }
</div>
